			for(RssItem rssItem : rssItems) {
			    Log.i("RSS Reader", rssItem.getTitle());
			}
		} catch (SAXException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		
		/*
